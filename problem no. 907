//  20-01-2024

#define mod 1000000007

int sumSubarrayMins(int* arr, int arrSize) {
    const int n=arrSize;
    int sum[n];
    int stack[n];
    int a=0,b=0;
    for(int i=0;i<n;i++)
    {
        while(a>0 && arr[i] < arr[stack[a-1]])
        {
            a-=1;
        }
        if(a>0)
        {
            sum[i]=sum[stack[a-1]]+(i-stack[a-1])*arr[i];
        }
        else
        {
            sum[i]=(i+1)*arr[i];
        }

        stack[a++]=i;
        b+=sum[i];
        b%=mod;
    }
    return b;
}
